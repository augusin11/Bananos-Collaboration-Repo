<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7d2323"
    tools:context=".ui.VoiceActivity">

    <ImageView
        android:id="@+id/listIcon"
        android:layout_width="124dp"
        android:layout_height="125dp"
        android:layout_centerInParent="true"
        android:background="@drawable/layout_bg"
        android:contentDescription="@string/list_icon"
        android:src="@drawable/ic_list_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logoIcon"
        android:layout_width="80dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false"
        android:contentDescription="@string/bananos_logo"
        android:paddingTop="30dp"
        android:src="@drawable/banana"
        android:visibility="visible" />

    <Button
        android:id="@+id/toList"
        android:layout_width="83dp"
        android:layout_height="56dp"
        android:layout_below="@+id/listIcon"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/layout_bg"
        android:backgroundTint="@android:color/white"
        android:onClick="clickListPage"
        android:text="@string/list"
        android:textColor="@android:color/black"/>

    <ImageButton
        android:id="@+id/voiceIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toList"
        android:layout_marginTop="80dp"
        android:background="@drawable/layout_bgc"
        android:backgroundTint="@android:color/holo_blue_light"
        android:src="@drawable/ic_mic_black"
        android:contentDescription="@string/this_is_a_voice_icon" />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="310dp"
        android:layout_height="30dp"
        android:layout_below="@+id/logoIcon"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:forceDarkAllowed="true"
        android:text="@string/go_bananas_on_your_savings"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:typeface="serif" />

</RelativeLayout>